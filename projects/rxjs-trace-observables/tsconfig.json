{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ],
    "outDir": "dist/ts",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
